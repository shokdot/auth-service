{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES2022",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "./dist",
		"baseUrl": ".",
		"paths": {
			"@core/*": [
				"../core/dist/*"
			],
			"@controllers/*": [
				"./src/controllers/*"
			],
			"@services/*": [
				"./src/services/*"
			],
			"@schemas/*": [
				"./src/schemas/*"
			]
		}
	},
	"include": [
		"src"
	]
}
